# Firebase Client SDK（Public - ブラウザで使用）
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Presentation Token Secret（Private）
PRESENTATION_TOKEN_SECRET=your-secret-token-here

# Apple Developer API Keys for Notarization (認証したアプリのリリース自動化用)
APPLE_API_KEY="Base64-encoded-string-of-AuthKey_XXXXXXXXXX.p8" # AuthKey_XXXXXXXXXX.p8 を base64 でエンコードした文字列
APPLE_API_KEY_ID="xxxxxxxxxx" # Key ID
APPLE_API_ISSUER="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx" # Issuer ID

# Developer ID Application 証明書
APPLE_CERTIFICATE="Base64-encoded-string-of-your-certificate" # 証明書のBase64エンコード文字列
APPLE_CERTIFICATE_PASSWORD="your-certificate-password-here" # 証明書のパスワード